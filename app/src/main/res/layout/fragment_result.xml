<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_diagnosa.DiagnosaFragment"
    android:background="@drawable/blue_gradient">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Diagnosa"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:fontFamily="@font/nexa_bold"
            />

        <ImageView
            android:id="@+id/r_img_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/boy"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_radius"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:fontFamily="@font/nexa_bold"
                android:text="Data Diri"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/nexa_bold"
                android:text="Nama:"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/r_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_bold"
                android:text="Irfan"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/nexa_bold"
                android:text="Umur:"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/r_umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_bold"
                android:text="Umur"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/nexa_bold"
                android:text="Jenis Kelamin:"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/r_jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_bold"
                android:text="Umur"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/nexa_bold"
                android:text="Alamat:"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/r_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_bold"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/nexa_bold"
                android:text="Nomor Telepon:"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/r_notelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_bold"
                android:text="09876867474"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_radius"
            android:padding="20dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:fontFamily="@font/nexa_bold"
                android:text="Diagnosa"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/r_diagnosa"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textAlignment="center"
                 android:gravity="center_horizontal"
                 android:textSize="20dp"
                 android:fontFamily="@font/nexa_bold"
                 android:text="Anda Terkena Penyakit Kebotakan"
                 android:layout_marginBottom="20dp"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_radius"
            android:padding="20dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:fontFamily="@font/nexa_bold"
                android:text="Penanganan"
                android:layout_marginBottom="20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/r_solusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</FrameLayout>