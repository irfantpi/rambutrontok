<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layoutContainer"
    android:orientation="vertical"
    android:background="#f7f7f7"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:background="@drawable/alopecia_areata"
        android:id="@+id/image_penyakit_detail"
        >
        <ImageView
            android:id="@+id/btn_back_detail_penyakit"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_left_thick_black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/c4">
        <TextView
            android:id="@+id/nama_penyakit_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nama Penyakit"
            android:fontFamily="@font/nexa_bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi: "
                android:fontFamily="@font/nexa_bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/deskripsi_penyakit_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="hifbio hsuiefvhfuihbuivshvfuijshvuihfsiuhbuifsvuifsbh gfbsbgr btrgsr grstrgbh"
                android:justificationMode="inter_word"
                android:fontFamily="@font/nexa_bold"
                android:layout_marginBottom="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gejala: "
                android:fontFamily="@font/nexa_bold"
                android:textSize="18dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_gejala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solusi: "
                android:fontFamily="@font/nexa_bold"
                android:textSize="18dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_solusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>