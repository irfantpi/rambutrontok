<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_diagnosa.DiagnosaActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/c7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Kuesioner"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:padding="60sp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="No"
            android:textStyle="bold"
            android:textColor="@color/c6"
            android:layout_marginRight="20sp"
            android:background="@drawable/button_orange_outline"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="YES"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_orange"
            style="@style/Theme.SistemPakarRambutRontok.PengenalanPenyakitTheme"
            />

    </LinearLayout>


</LinearLayout>